{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@models/*": ["./models/*"],
      "@services/*": ["./services/*"]
    }
  },
  "include": ["src/"]
}
